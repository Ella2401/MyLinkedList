package com.company;
import java.util.*;
/**
 * My own LinkedList implementation.
 * Linked List is a list of Nodes
 * 1) Add the given element as the first element to the LinkedList: void addFirst(Integer integer)
 * 2) Append the given element at the end of the list: void addLast(Integer integer)
 * 3) Add element at the given index in LinkedList: void add(int index, Integer integer)
 * 4) Get the element at the specified index: Integer get(int index)
 * 5) Get the first element in the LinkedList: Integer getFirst()
 * 6) Get the last element in the LinkedList: Integer getLast()
 * 7) Delete the first occurrence of the given element from the LinkedList: boolean removeFirstOccurrence(Object o)
 * 8) Return size or number of elements in the LinkedList: int size()
 */
public class MyLinkedList extends AbstractSequentialList<Integer> implements List<Integer>, Deque<Integer> {
    private int size;
    private Node head;
    private Node iterator;
    /**
     * Node contains data itself, the address to the next node and the address to the previous node
     */
    static class Node {
        Integer data;
        Node next;
        Node prev;
        Node(int data, Node next, Node prev) {
            this.data = data;
            this.next = next;
            this.prev = prev;
        }
        public Integer getData() {
            return data;
        }
        public void setData(Integer data) {
            this.data = data;
        }
        public Node getNext() {
            return next;
        }
        public void setNext(Node next) {
            this.next = next;
        }
        public Node getPrev() {
            return prev;
        }
        public void setPrev(Node prev) {
            this.prev = prev;
        }
    }
    public MyLinkedList() {
        this.size = 0;
    }
    @Override
    public void add(int index, Integer integer) {
        if (index < 0 || index > this.size) {
            throw new IndexOutOfBoundsException();
        }
        if (index == 0) {
            addFirst(integer);
        } else {
            Node newNode = new Node(integer, null, null);
            Node interator = head;
            for (int i = 0; i < index - 1; i++) {
                interator = interator.next;
            }
            newNode.next = interator.next;
            interator.next = newNode;
        }
        ++this.size;
    }
    @Override
    public ListIterator<Integer> listIterator(int i) {
        return null;
    }
    @Override
    public void addFirst(Integer integer) {
        if (head == null) {
            head = new Node(integer, null, null);
            iterator = head;
        } else {
            Node newNode = new Node(integer, head, null);
            head.setPrev(newNode);
            head = newNode;
        }
        ++this.size;
    }
    @Override
    public void addLast(Integer integer) {
        if (head == null) {
            head = new Node(integer, null, null);
            iterator = head;
        } else {
            Node newNode = new Node(integer, null, iterator);
            iterator.setNext(newNode);
            iterator = newNode;
        }
        ++this.size;
    }
    @Override
    public boolean offerFirst(Integer integer) {
        return false;
    }
    @Override
    public boolean offerLast(Integer integer) {
        return false;
    }
    @Override
    public Integer removeFirst() {
        return null;
    }
    @Override
    public Integer removeLast() {
        return null;
    }
    @Override
    public Integer pollFirst() {
        return null;
    }
    @Override
    public Integer pollLast() {
        return null;
    }
    public Integer get(int index) {
        if (head.getNext() == null || index >= this.size) {
            return null;
        }
        //Node iterator = head.getNext();
        Node iterator = head;
        int counter = 0;
        while (counter < index) {
            iterator = iterator.getNext();
            counter++;
        }
        return iterator.getData();
    }
    @Override
    public Integer getFirst() {
        return get(0);
    }
    @Override
    public Integer getLast() {
        return get(this.size - 1);
    }
    @Override
    public Integer peekFirst() {
        return null;
    }
    @Override
    public Integer peekLast() {
        return null;
    }
    @Override
    public boolean removeFirstOccurrence(Object o) {
        if (head.getNext() == null) {
            return false;
        }
        iterator = head;
        while (iterator.getNext() != null) {
            if (iterator.getNext().getData().equals(o)) {
                iterator.setNext(iterator.getNext().getNext());
                --this.size;
                return true;
            }
            iterator = iterator.getNext();
        }
        return false;
    }
    @Override
    public boolean removeLastOccurrence(Object o) {
        return false;
    }
    @Override
    public boolean offer(Integer integer) {
        return false;
    }
    @Override
    public Integer remove() {
        return null;
    }
    @Override
    public Integer poll() {
        return null;
    }
    @Override
    public Integer element() {
        return null;
    }
    @Override
    public Integer peek() {
        return null;
    }
    @Override
    public void push(Integer integer) {
    }
    @Override
    public Integer pop() {
        return null;
    }
    @Override
    public int size() {
        return this.size;
    }
    @Override
    public Iterator<Integer> descendingIterator() {
        return null;
    }
    public static void main(String[] args) {
        MyLinkedList mylist = new MyLinkedList();
        System.out.println("The number of elements in array is: " + mylist.size());
        System.out.println("Insert at start : 1 ");
        mylist.addFirst(1);
        System.out.println("Insert at start : 2 ");
        mylist.addFirst(2);
        System.out.println("Insert at end : 10");
        mylist.addLast(10);
        System.out.println("Insert at any position : 1 , 10");
        mylist.add(1, 10);
        System.out.println("Insert at any position : 2 , 8");
        mylist.add(2, 8);
        System.out.println("The number of elements in array is: " + mylist.size());
        for (int i = 0; i < mylist.size(); i++) {
            System.out.println("LinkedList[" + i + "]: " + mylist.get(i));
        }
        System.out.println();
        System.out.println("Delete the first occurrence of 10");
        mylist.removeFirstOccurrence(10);
        for (int i = 0; i < mylist.size(); i++) {
            System.out.println("LinkedList[" + i + "]: " + mylist.get(i));
        }
        System.out.println();
        System.out.println("Element at index 0 : " + mylist.get(0));
        System.out.println("Element at index 1 : " + mylist.get(1));
        System.out.println("Element at index 2 : " + mylist.get(2));
        System.out.println("Element at index 3 : " + mylist.get(3));
        System.out.println();
        System.out.println("The first element : " + mylist.getFirst());
        System.out.println("The last element : " + mylist.getLast());
    }
}
